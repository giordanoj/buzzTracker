<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs2340.team.buzztracker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.Login"
            android:label="@string/title_activity_login1" />
        <activity
            android:name=".controllers.Register"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".controllers.ApplicationAcitivity"
            android:label="@string/title_activity_application_acitivity" />
        <activity
            android:name=".controllers.LocationActivity"
            android:label="LocationActivity" />
        <activity
            android:name=".controllers.LocationDetailActivity"
            android:label="LocationDetailActivity" />
        <activity
            android:name=".controllers.UserProfile"
            android:label="@string/title_activity_user_profile" />
        <activity android:name=".controllers.AddDonationActivity"
            android:label="AddDonationActivity" />
        <activity android:name=".controllers.InventoryActivity"
            android:label="InventoryActivity" />
        <activity android:name=".controllers.ItemDetailActivity"
            android:label="ItemDetailActivity" />

        <service android:enabled="true" android:name=".controllers.CheckRegistrationIntentService"></service>
        <service android:enabled="true" android:name=".controllers.RegisterUserIntentService"></service>
        <service android:enabled="true" android:name=".controllers.LoginIntentService"></service>
        <service android:enabled="true" android:name=".controllers.GetLocationsIntentService"></service>
        <service android:enabled="true" android:name=".controllers.AddDonationIntentService"></service>
        <service android:enabled="true" android:name=".controllers.GetInventoryIntentService"></service>
        <service android:enabled="true" android:name=".controllers.GetCategoriesIntentService"></service>
        <service android:enabled="true" android:name=".controllers.ItemSearchIntentService"></service>
    </application>

</manifest>